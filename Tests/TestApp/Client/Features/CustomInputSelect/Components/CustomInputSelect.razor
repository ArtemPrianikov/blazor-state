@namespace TestApp.Client.Features.CustomInputSelect.Components

@typeparam T
@inherits BlazorState.BlazorStateInputComponent<T>

<div>
  @if (!string.IsNullOrWhiteSpace(Label))
  {
    <label for="@Id">@Label</label>
  }

  <select class="form-control @CssClass" id="@Id" @bind="CurrentValueAsString">
    @if (ShowDefaultOption)
    {
      <option value="0" hidden disabled>- Please Select -</option>
    }
    @ChildContent
  </select>

  <div>
  </div>
</div>